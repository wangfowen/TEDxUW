$red: #FD2520;
$black: #111;
$white: #fff;
$off-white: #F9FAF5;
$gray: #F5F5F0;

$homizio: Homizio, serif;

$header-height: 100px;
$footer-height: 45px;

@font-face {
  font-family: Homizio;
  src: url('/HomizioNovaRegular.otf');
}

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}

html, body {
  width: 100%;
  height: 100%;
}

body {
  font-family: $homizio;
  background: $off-white;
}

a, a:active, a:visited {
  color: $black;
  text-decoration: none;
}

.header {
  display: block;
  width: 100%;
  background: $white;
  position: fixed;
  top: 0;
  z-index: 5;

  .nav, .dropdown, .min-menu {
    list-style: none;
  }

  .drop-link:after {
    position: absolute;
    top: 7px;
    content: "â–¼";
    font-size: 7px;
    padding-left: 3px;
  }

  .min-menu {
    display: none;
  }

  .link {
    text-align: center;
    cursor: pointer;

    a {
      padding-bottom: 5px;
      text-transform: uppercase;
    }
  }

  .link:hover > a {
    border-bottom: 1px solid $red;
  }

  .nav {
    height: $header-height;

    #min-toggle {
      display: none;
    }

    > .link, .main-link {
      float: left;
      height: 100%;
      line-height: $header-height;
    }

    .link {
      width: 12%;
    }

    .main-link {
      width: 25%;
      text-align: center;

      img {
        height: 50px;
        margin: 25px auto 0 ;
      }
    }
  }

  .dropdown {
    width: 100%;
    z-index: 2;
    border-top: 1px solid $gray;
    margin-top: -25px;
    display: none;

    .link {
      background: $white;
      display: block;
      width: 100%;
      height: 40px;
      line-height: 40px;
      border: 1px solid $gray;
      border-top: none;
    }
  }
}

.wrapper {
  z-index: 1;
  position: relative;
  padding: $header-height 0 $footer-height+20;
  font-size: 17px;
  line-height: 1.5em;
  width: 100%;

  .main {
    max-width: 800px;
    margin: 0px auto;
    padding: 20px 10px 0;
  }

  a {
    border-bottom: 1px solid $black;
  }

  li {
    padding-bottom: 10px;
  }

  h1, h2 {
    line-height: 1.1em;
    padding-bottom: 10px;
  }

  h1.title {
    text-align: center;
    text-transform: uppercase;
    padding: 10px 0 20px;
  }

  h1 {
    font-size: 36px;
  }

  h2 {
    font-size: 26px;
  }

  .set {
    border-top: $black 1px solid;
    padding: 20px 0;

    img {
      float: right;
      margin: 5px;
    }
  }

  .set:first-child {
    border-top: none;
  }

  .set:nth-child(even) {
    background: $gray;

    img {
      float: left;
    }
  }

  .banner {
    position: relative;

    img {
      width: 100%;
    }

    p {
      position: absolute;
      top: 40%;
      text-align: center;
      width: 100%;
      font-size: 50px;
    }
  }

  .faq {
    .question {
      font-style: italic;
      font-weight: bold;
    }
  }

  .blog {
    .info {
      font-style: italic;
      font-size: 15px;
      margin: 5px 0 10px;
    }
  }
}

.footer {
  position: fixed;
  bottom: 0;
  background: $red;
  padding: 8px 8px 4px;
  width: 100%;
  text-align: right;
  z-index: 3;

  > a {
    color: $white;
    display: inline-block;
    line-height: 10px;
  }

  > a:hover {
    border-bottom: 1px solid $white;
  }

  .share {
    display: inline-block;

    li {
      display: inline-block;
    }

    .sprite {
      background: url(<%= asset_path("cs.png") %>) no-repeat;
      display: block;
      height: 26px;
      margin: 0 3px;
    }

    .sprite:hover, .sprite:active {
      opacity: .7;
    }

    .twitter {
      background-position: -30px 0;
      width: 27px;
    }

    .fb {
      background-position: -58px 0;
      width: 28px;
    }

    .email {
      background-position: 0px 0px;
      width: 27px;
    }
  }
}

@media screen and (min-width: 801px) {
  .min-menu {
    display: none !important;
  }
}

@media screen and (max-width: 800px) {
  .header {
    position: relative;
    .nav .link {
      display: none;
    }

    .main-link {
      margin-left: 10px;
    }

    #min-toggle {
      display: block !important;
      float: right;
      margin-right: 10px;
    }

    .min-menu {
      .link {
        height: 40px;
        line-height: 40px;
        border-bottom: 1px solid $gray;
      }
    }
  }

  .wrapper {
    padding: 0 0 $footer-height+20;
  }
}
