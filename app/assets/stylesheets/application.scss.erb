$red: #FF272A;
$black: #111;
$white: #fff;
$off-white: #F9FAF5;

$homizio: Homizio, serif;

$header-height: 100px;

@font-face {
  font-family: Homizio;
  src: url('/HomizioNovaRegular.otf');
}

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body {
  font-family: $homizio;
  background: $off-white;
  width: 100%;
  height: 100%;
}

a, a:active, a:visited {
  color: $black;
  text-decoration: none;
}

.header {
  display: block;
  width: 100%;
  height: $header-height;
  background: $white;

  .nav, .dropdown {
    list-style: none;
  }

  .nav {
    height: 100%;

    .link, .main-link {
      text-align: center;
      float: left;
      height: 100%;
      line-height: $header-height;
    }

    .link {
      width: 12%;

        a {
          padding-bottom: 5px;
          text-transform: uppercase;
        }
    }

    .main-link {
      width: 25%;

      img {
        height: 60px;
        margin-top: 20px;
      }
    }

    .link:hover a {
      border-bottom: 1px solid $red;
    }
  }

  .dropdown {
    display: none;
  }
}

.footer {
  position: fixed;
  bottom: 0;
  background: $red;
  padding: 8px 8px 4px;
  width: 100%;
  text-align: right;

  > a {
    color: $white;
    display: inline-block;
    line-height: 10px;
  }

  > a:hover {
    border-bottom: 1px solid $white;
  }

  .share {
    display: inline-block;

    li {
      display: inline-block;
    }

    .sprite {
      background: url(<%= asset_path("cs.png") %>) no-repeat;
      display: block;
      width: 26px;
    }

    .sprite:hover, .sprite:active {
      opacity: .7;
    }

    .twitter {
      background-position: -36px -2px;
      height: 26px;
      margin: 0 4px;
    }

    .fb {
      background-position: -69px -2px;
      height: 26px;
      margin: 0 4px;
    }

    .email {
      background-position: -3px -2px;
      height: 26px;
      margin: 0 4px;
    }

    .linkedin {
      background-position: -99px 0px;
      height: 30px;
      margin: -1px 4px;
    }
  }
}

@media screen and (max-width: 800px) {
  .nav {
    display: none;
  }
}
